<UserControl x:Class="AutocadMcpPlugin.UI.Controls.ChatPaletteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             MinWidth="320"
             MinHeight="420">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Чат ассистента MCP" FontWeight="Bold" FontSize="16" />

        <Border Grid.Row="1"
                Margin="0,12,0,12"
                BorderBrush="#FFD0D0D0"
                BorderThickness="1"
                CornerRadius="4"
                Background="#FFF7F7F7">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="8" x:Name="HistoryPanel" />
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2">
            <TextBox x:Name="PromptTextBox"
                     MinHeight="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     ToolTip="Опишите, что нужно сделать…" />
            <Button Content="Отправить"
                    Margin="0,8,0,0"
                    Height="32"
                    HorizontalAlignment="Right"
                    Padding="12,0"
                    Click="OnSendClicked" />
        </StackPanel>
    </Grid>
</UserControl>
