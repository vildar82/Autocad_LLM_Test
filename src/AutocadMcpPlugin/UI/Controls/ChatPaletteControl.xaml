<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="AutocadMcpPlugin.UI.Controls.ChatPaletteControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:AutocadMcpPlugin.UI.ViewModels"
    MinWidth="320"
    MinHeight="420"
    d:DataContext="{d:DesignInstance viewModels:ChatViewModel}"
    mc:Ignorable="d">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            FontSize="16"
            FontWeight="Bold"
            Text="Чат ассистента MCP" />

        <Border
            Grid.Row="1"
            Margin="0,12,0,12"
            Background="#FFF7F7F7"
            BorderBrush="#FFD0D0D0"
            BorderThickness="1"
            CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="8,4">
                                <TextBlock FontWeight="Bold" Text="{Binding Author}" />
                                <TextBlock Text="{Binding Text}" TextWrapping="Wrap" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <TextBox
            Grid.Row="2"
            MinHeight="60"
            AcceptsReturn="True"
            Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap"
            ToolTip="Опишите, что нужно сделать..."
            VerticalScrollBarVisibility="Auto" />

        <Grid Grid.Row="3" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Настройки"
                    Padding="12,0"
                    Margin="0,0,12,0"
                    Click="OnSettingsClicked" />

            <TextBlock Grid.Column="1"
                       Margin="0,0,12,0"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       Text="{Binding StatusMessage}" />

            <Button Grid.Column="2"
                    Height="32"
                    Padding="12,0"
                    Command="{Binding SendCommand}"
                    Content="Отправить" />
        </Grid>
    </Grid>
</UserControl>
